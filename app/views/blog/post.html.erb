<div class="row">
  <div class="col-sm-12">
    <h1>Create a post</h1>
    <%= form_for @post, :url => blog_create_path, :html => {:class => "form-horizontal" } do |f| %>
        <div class="form-group">
          <%= f.label :title, :col_sm => 2 %>
          <%= f.text_field :title, :col_sm => 3 %>
        </div>
        <div class="form-group">
          <%= f.label :body, :col_sm => 2 %>
          <%= f.text_area :body, :style => "width:300px; height:200px; position:top" %>
        </div>
        <div class="form-group">
          <%= f.label :photo, :col_sm => 2 %>
          <%= f.file_field :photo %>
        </div>
        <div class="col-sm-offset-2 col-sm-4 pull-left">
          <%= link_to "Go back", home_index_path, :class => "btn btn-danger"  %>
          <%= f.submit "Post" %>
        </div>
    <% end %>
  </div>
</div>